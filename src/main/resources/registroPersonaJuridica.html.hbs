<html>
<head>
<meta charset="UTF-8">
    <title>Registrar cuenta persona juridica</title>
      <link rel="stylesheet" type="text/css" href="assets/RegistroPersonaJuridica.css">
    <link rel="stylesheet" type="text/css" href="assets/general.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
                  integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
                  crossorigin="anonymous">
</head>

<body>

<h1 class="titulosPantallasSinLayout">Crea tu cuenta</h1>
<form action="/registro_negocio" method="POST">
      <div class="row">
           <div class="col">
               <div class="form-floating">
                   <input type="email" class="form-control" id="correo" name="correo" placeholder="Ingrese su email" required>
                   <label for="correo">Correo Electrónico</label>
               </div>
               <div class="form-floating">
                   <input type="password" class="form-control" id="contrasenia" name="contrasenia" placeholder="Contraseña" required>
                   <label for="contrasenia">Contraseña</label>
               </div>
               <div class="form-floating">
                   <input type="password" class="form-control" id="repetirContrasenia" name="repetirContrasenia" placeholder="Repita la contraseña" required>
                   <label for="repetirContrasenia">Repita la contraseña</label>
               </div>

            <div class="form-floating">
                <input type="text" class="form-control" id="razonsocial" name="razonsocial" placeholder="Razón Social" required>
                <label for="razonsocial">Razón Social</label>
            </div>
            <div class="form-floating">
                <input type="text" class="form-control" id="Codigo" name="codigoAdmin" placeholder="Codigo" >
                <label for="codigoAdmin">Codigo Admin</label>
            </div>
           </div>
        <div class="col">

            <div class="form-floating">
                <label for="rubro"></label>
                <select name="rubro" id="rubro" class="form-control" required>
                    <option value="">Seleccione el rubro</option>
                    {{#each rubros}}
                        <option value="{{this}}">{{this}}</option>
                    {{/each}}
                </select>
            </div>

            <div class="form-floating">
                <label for="tiporazonsocial">Tipo de Razón Social</label>
                <select name="tiporazonsocial" id="tiporazonsocial" class="form-control" required>
                    <option value=""></option>
                    {{#each tiposrazonsocial}}
                        <option value="{{this}}">{{this}}</option>
                    {{/each}}
                </select>
            </div>

            <!-- Campo de Provincia -->
            <div class="form-floating">
                <label for="provincia"></label>
                <select name="provincia" id="provincia" required>
                    <option value="">Seleccione su provincia</option>
                    {{#each provincias}}
                    <option value="{{this}}">{{this}}</option>
                    {{/each}}
                </select>
            </div>

            <div class="form-floating">
                <label for="localidad"></label>
                <select name="localidad" id="localidad" required>
                    <option value="">Seleccione su localidad</option>
                    {{#each localidades}}
                    <option value="{{this}}">{{this}}</option>
                    {{/each}}
                </select>
            </div>


            <div class="form-floating">
                <input type="text" class="form-control" id="domicilio" name="domicilio" placeholder="Domicilio" required>
                <label for="domicilio">Domicilio</label>
            </div>
          </div>
        </div>
  </div>
    <div class="row" id="botonCrearCuenta">
        <input class="botonPrincipal" type="submit" value="Crear">
    </div>
</form>


</body>
</html>
