{{# partial "contenido" }}
    <head>
      <meta charset="UTF-8">
          <meta name="viewport" content="width=device-width, initial-scale=1">
          <link rel="stylesheet" type="text/css" href="assets/general.css">
          <link rel="stylesheet" type="text/css" href="assets/Colaboraciones.css">
          <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
                integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
                crossorigin="anonymous">
      </head>
      <body >
        <h1 class="titulosPantallasSinLayout">Colaboraciones</h1>
      <form action="/colaboracion" method="GET">
      <section class="form-floating">
                     <div class="form-floating">
                         <select class="form-control" id="filtro" name="filtro" required>
                             <option value="">Seleccione</option>
                             <option value="0">Todas</option>
                             <option value="1">Nombre</option>
                             <option value="2">Localidad</option>
                             <option value="3">Direccion</option>
                         </select>
                         <label for="Filtro">Filtros</label>
                     </div>
          </section>
          <input type="text" class="form-control" id="razonsocial" name="dato" >
                      <label for="dato"></label>
          <div class="row" id="BotonFiltrarHeladera">
              <input class="botonPrincipal" type="submit" value="filtrar">
          </div>
      </form>

  <form action="/colaboracion" method="POST">
      <section id="contenerdorHeladeras">
          <div class="fondoContenedor">
              <p>Lista de heladeras</p>
              <ul>
                  {{#each heladeras}}
                      <li>
                          <input type="checkbox" name="heladeraId" value="{{id}}" id="heladera{{id}}">
                          <label for="heladera{{id}}">Nombre: {{nombre}}
                           Ubicación: {{this.direccion.provincia}} {{this.direccion.localidad}} {{this.direccion.direccion}}</label>
                      </li>
                  {{/each}}
              </ul>
          </div>
          <div class="form-floating">
                         <select class="form-control"  name="eleccion" required>
                             <option value="">Seleccione</option>
                             <option value="0">Donar Dinero</option>
                             <option value="1">Donar Vianda</option>
                             <option value="2">Distribuir Viandas</option>
                             <option value="3">Donar Heladera</option>
                         </select>
                         <label for="Colaboraciones">Tipo Colaboracion</label>
                     </div>
          <!-- Botón de envío -->
          <div class="row" id="BotonTipoColaboracion">
              <input class="botonPrincipal" type="submit" value="Colaborar">
          </div>
      </section>
  </form>
{{/partial}}

