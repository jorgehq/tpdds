{{# partial "contenido" }}
    <head>
      <meta charset="UTF-8">
          <meta name="viewport" content="width=device-width, initial-scale=1">
          <link rel="stylesheet" type="text/css" href="assets/general.css">
          <link rel="stylesheet" type="text/css" href="assets/RegistrarPersonaVulnerable.css">
          <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
                integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
                crossorigin="anonymous">
      </head>
      <body >
       <h1 class="titulosPantallasSinLayout">Registro PSV</h1>

      <form action="/colaboracion/persona-vulnerable" method="POST">
               <div class="form-floating">
                   <input type="text" class="form-control" id="nombre" name="nombre" required>
                   <label for="nombre">Nombre</label>
               </div>

               <div class="form-floating">
                   <input type="date" class="form-control" id="fecha" name="fecha" required>
                   <label for="fecha">Fecha</label>
               </div>

                <div class="form-floating">
                    <label for="provincia"></label>
                    <select name="provincia" id="provincia" required>
                        <option value="">Seleccione su provincia</option>
                        {{#each provincias}}
                        <option value="{{this}}">{{this}}</option>
                        {{/each}}
                    </select>
                </div>

                <div class="form-floating">
                    <label for="localidad"></label>
                    <select name="localidad" id="localidad" required>
                        <option value="">Seleccione su localidad</option>
                        {{#each localidades}}
                        <option value="{{this}}">{{this}}</option>
                        {{/each}}
                    </select>
                </div>

               <div class="form-floating">
                   <input type="text" class="form-control" id="direccion" name="direccion" required>
                   <label for="domicilio">Domicilio</label>
               </div>
               <div class="form-floating">
                   <input type="text" class="form-control" id="dni" name="dni"  required>
                   <label for="dni">DNI</label>
               </div>
               <div class="form-floating">
                   <input type="text" class="form-control" id="cantidadHijos" name="cantidadHijos"  required>
                   <label for="cantidadHijos">Cantidad de Hijos</label>
               </div>
                 <div class="form-floating">
                    <input type="text" class="form-control" id="tarjeta" name="tarjeta"  required>
                    <label for="tarjeta">Tarjeta</label>
                  </div>
                    <div class="row" id="botonRegistroPSV">
                        <input class="botonPrincipal" type="submit" value="Crear">
                    </div>
      </form>

{{/partial}}

{{> BarraNavegacion.html }}