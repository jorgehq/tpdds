    <head>
      <meta charset="UTF-8">
          <meta name="viewport" content="width=device-width, initial-scale=1">
          <link rel="stylesheet" type="text/css" href="assets/general.css">
          <link rel="stylesheet" type="text/css" href="assets/DistribucionViandas.css">
          <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
                integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
                crossorigin="anonymous">
      </head>
      <body >
<h1 class="titulosPantallasSinLayout">Distribuir viandas</h1>
      <form action="/distribuir_vianda" method="POST">

            <div>
              <p><strong>Heladera:</strong> {{heladera1.nombre}}</p>
              <p><strong>Dirección:</strong> {{heladera1.direccion.provincia}} {{heladera1.direccion.localidad}} {{heladera1.direccion.direccion}}</p>
              <input type="hidden" name="heladera1" value="{{heladera1.id}}">
            </div>
            <div>
              <p><strong>Heladera:</strong> {{heladera2.nombre}}</p>
              <p><strong>Dirección:</strong> {{heladera2.direccion.provincia}} {{heladera2.direccion.localidad}} {{heladera2.direccion.direccion}}</p>
              <input type="hidden" name="heladera2" value="{{heladera2.id}}">
            </div>

      <div class="form-floating">
          <select class="form-control" name="origen" required>
              <option value="">Seleccione Heladera a Distribuir</option>
              <option value="{{heladera1.id}}">
                  {{heladera1.nombre}} - {{heladera1.direccion.provincia}}, {{heladera1.direccion.localidad}}, {{heladera1.direccion.direccion}}
              </option>
              <option value="{{heladera2.id}}">
                  {{heladera2.nombre}} - {{heladera2.direccion.provincia}}, {{heladera2.direccion.localidad}}, {{heladera2.direccion.direccion}}
              </option>
          </select>
          <label for="origen">Heladera Origen</label>
      </div>

      <div class="form-floating">
          <select class="form-control" name="destino" required>
              <option value="">Seleccione Heladera de Destino</option>
              <option value="{{heladera1.id}}">
                  {{heladera1.nombre}} - {{heladera1.direccion.provincia}}, {{heladera1.direccion.localidad}}, {{heladera1.direccion.direccion}}
              </option>
              <option value="{{heladera2.id}}">
                  {{heladera2.nombre}} - {{heladera2.direccion.provincia}}, {{heladera2.direccion.localidad}}, {{heladera2.direccion.direccion}}
              </option>
          </select>
          <label for="destino">Heladera Destino</label>
      </div>

      <div class="row">
                 <div class="col">
                     <div class="form-floating">
                         <input type="text" class="form-control" id="cantidad" name="cantidad"  required>
                         <label for="cantidad">Cantidad</label>
                     </div>
                     <div class="form-floating">
                         <input type="text" class="form-control" id="motivo" name="motivo" required>
                         <label for="motivo">Motivo</label>
                     </div>


                    <div class="row" id="botonDistribuir">
                        <input class="botonPrincipal" type="submit" value="Crear">
                    </div>
      </form>

{{/partial}}

