      <body >
       <h1 class="titulosPantallasSinLayout">Donacion</h1>
      <form action="/donar_dinero" method="POST">
      <div class="row">
                 <div class="col">
                     <div class="form-floating">
                         <input type="text" class="form-control" id="monto" name="monto"  required>
                         <label for="monto">Monto</label>
                     </div>
                     <div class="form-floating">
                         <input type="text" class="form-control" id="tarjeta" name="tarjeta" required>
                         <label for="tarjeta">Tarjeta</label>
                     </div>

                <div class="form-floating">
                    <label for="frecuencia"></label>
                    <select name="frecuencia" id="frecuencia" required>
                        <option value="">Seleccione Frecuencia</option>
                        {{#each frecuencias}}
                        <option value="{{this}}">{{this}}</option>
                        {{/each}}
                    </select>
                </div>
                    <div class="row" id="botonDonarDinero">
                        <input class="botonPrincipal" type="submit" value="Crear">
                    </div>
      </form>

{{/partial}}

